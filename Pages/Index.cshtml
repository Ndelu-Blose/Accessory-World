@page
@model IndexModel
@{
    ViewData["Title"] = "Accessory World - Premium Tech Accessories";
    Layout = "~/Pages/Shared/_LandingLayout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/landing.css" asp-append-version="true" />
}

@section Scripts {
    <script src="~/js/landing.js" asp-append-version="true"></script>
}

<!-- Hero Section -->
<section class="hero">
    <div class="container">
        <div class="hero-content">
            <div class="hero-text">
                <span class="badge badge-red">BIG SALE</span>
                <h1>Level Up Your Mobile Game</h1>
                <p class="hero-subtitle">IPHONES AT UNBEATABLE PRICES</p>
                <p class="hero-price">From <span class="price-highlight">R2850</span></p>
                <a href="/Products" class="btn btn-primary btn-lg">SHOP NOW</a>
            </div>
            <div class="hero-image">
                <div class="hero-image-bg">
                    <img src="~/images/hero-product.svg" alt="iPhone 15 Pro and AirPods on gradient" style="max-width: 100%; height: auto;" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Two-up Promo Tiles -->
<section class="promo-tiles">
    <div class="container">
        <div class="promo-grid">
            <div class="promo-tile promo-tile-coupon">
                <div class="promo-content">
                    <p class="promo-overline">USE CODE: <strong>SALE35%</strong></p>
                    <h2>New iPads Stock Coming Soon</h2>
                    <p class="promo-subtitle">AMAZING DISCOUNTS AND DEALS</p>
                    <a href="/Products?category=iPads" class="btn btn-secondary">SHOP NOW</a>
                </div>
                <div class="promo-image">
                    <img src="~/images/promo-accessories.svg" alt="Premium Accessories" style="width: 120px; height: 120px;" />
                </div>
            </div>
            <div class="promo-tile promo-tile-teaser">
                <div class="promo-content">
                    <span class="badge badge-coming-soon">COMING SOON</span>
                    <h2>Gaming Accessories</h2>
                    <a href="#" class="promo-link">RELEASE DATE & PRICE</a>
                </div>
                <div class="promo-image">
                    <img src="~/images/promo-gaming.svg" alt="Gaming Accessories" style="width: 120px; height: 120px;" />
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Wide Feature Banner -->
<section class="feature-banner">
    <div class="container">
        <div class="feature-content">
            <div class="feature-text">
                <p class="feature-overline">EXCLUSIVE HEADPHONE</p>
                <h2>Discounts On All Accessories</h2>
                <a href="/Products?category=Accessories" class="btn btn-primary">SHOP NOW</a>
            </div>
            <div class="feature-image">
                <img src="~/images/feature-banner.svg" alt="Multi-Device Accessories" style="width: 300px; height: 200px;" />
            </div>
        </div>
    </div>
</section>

<!-- Four Promo Cards -->
<section class="promo-cards">
    <div class="container">
        <div class="cards-grid">
            <div class="promo-card">
                <span class="card-badge badge-new">NEW PRODUCT</span>
                <div class="card-image">
                    <svg width="150" height="100" viewBox="0 0 150 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="25" y="20" width="100" height="60" rx="8" fill="#f3f4f6" stroke="#d1d5db" stroke-width="2"/>
                        <rect x="35" y="30" width="80" height="40" rx="3" fill="#1f2937"/>
                    </svg>
                </div>
                <h3>New Gen iPads</h3>
                <p>AVAILABLE ON PRE ORDER</p>
            </div>
            <div class="promo-card">
                <span class="card-badge badge-preorder">PRE ORDER NOW</span>
                <div class="card-image">
                    <svg width="150" height="100" viewBox="0 0 150 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <circle cx="75" cy="50" r="20" fill="#1f2937"/>
                        <path d="M55 35 Q75 15 95 35" stroke="#374151" stroke-width="4" fill="none"/>
                    </svg>
                </div>
                <h3>Music Accessories</h3>
                <p>PRE ORDER TODAY</p>
            </div>
            <div class="promo-card">
                <span class="card-badge badge-preorder">PRE ORDER NOW</span>
                <div class="card-image">
                    <svg width="150" height="100" viewBox="0 0 150 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="60" y="30" width="30" height="40" rx="15" fill="#1f2937"/>
                        <rect x="50" y="45" width="50" height="10" rx="5" fill="#3b82f6"/>
                    </svg>
                </div>
                <h3>Apple Watches</h3>
                <p>STUDENT DISCOUNT</p>
            </div>
            <div class="promo-card">
                <span class="card-badge badge-deal">MONTH DEAL</span>
                <div class="card-image">
                    <svg width="150" height="100" viewBox="0 0 150 100" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <rect x="50" y="20" width="50" height="60" rx="15" fill="#1f2937"/>
                        <rect x="60" y="30" width="30" height="40" rx="3" fill="#3b82f6"/>
                    </svg>
                </div>
                <h3>iPhone Winter Sale</h3>
                <p>UP TO 35% OFF</p>
            </div>
        </div>
    </div>
</section>

<!-- Product Tabs Section -->
<section class="product-tabs">
    <div class="container">
        <div class="section-header">
            <h2>Best Sellers</h2>
            <div class="tabs">
                <button class="tab-btn active" data-tab="bestsellers">Best Sellers</button>
                <button class="tab-btn" data-tab="laptops">Laptops</button>
                <button class="tab-btn" data-tab="iwatch">Iwatch</button>
            </div>
        </div>
        
        <div class="products-grid" id="bestsellers-grid">
            @foreach (var product in Model.BestSellers)
            {
                @await Html.PartialAsync("_ProductCard", product)
            }
        </div>
        
        <div class="products-grid d-none" id="laptops-grid">
            @foreach (var product in Model.Laptops)
            {
                @await Html.PartialAsync("_ProductCard", product)
            }
        </div>
        
        <div class="products-grid d-none" id="iwatch-grid">
            @foreach (var product in Model.IwatchProducts)
            {
                @await Html.PartialAsync("_ProductCard", product)
            }
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter">
    <div class="container">
        <div class="newsletter-content">
            <h2>Sign Up For Newsletter</h2>
            <form class="newsletter-form" id="newsletter-form">
                <input type="email" id="newsletter-email" name="email" placeholder="Enter your email" required>
                <button type="submit" class="btn btn-primary" id="newsletter-submit">SUBSCRIBE</button>
            </form>
            <div id="newsletter-message" class="mt-2" style="display: none;"></div>
        </div>
    </div>
</section>
