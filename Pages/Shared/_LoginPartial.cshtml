@using Microsoft.AspNetCore.Identity
@using AccessoryWorld.Models
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    @if (User.IsInRole("Admin"))
    {
        <!-- Admin User Dropdown -->
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-warning" href="#" id="adminDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user-shield me-1"></i>
                <strong>Admin:</strong> @User.Identity?.Name
                <span class="badge bg-warning text-dark ms-1">ADMIN</span>
            </a>
            <ul class="dropdown-menu" aria-labelledby="adminDropdown">
                <li><h6 class="dropdown-header"><i class="fas fa-cogs me-1"></i>Admin Functions</h6></li>
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Dashboard"><i class="fas fa-tachometer-alt me-2"></i>Admin Dashboard</a></li>
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Products"><i class="fas fa-box me-2"></i>Manage Products</a></li>
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Orders"><i class="fas fa-shopping-bag me-2"></i>Manage Orders</a></li>
                <li><a class="dropdown-item" asp-controller="Admin" asp-action="Users"><i class="fas fa-users me-2"></i>Manage Users</a></li>
                <li><hr class="dropdown-divider"></li>
                <li><h6 class="dropdown-header"><i class="fas fa-user me-1"></i>Personal</h6></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="fas fa-user-edit me-2"></i>My Profile</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="dropdown-item text-danger"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <!-- Customer User Dropdown -->
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle text-dark" href="#" id="customerDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <i class="fas fa-user me-1"></i>
                Hello, @User.Identity?.Name!
            </a>
            <ul class="dropdown-menu" aria-labelledby="customerDropdown">
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Dashboard"><i class="fas fa-tachometer-alt me-2"></i>My Dashboard</a></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Profile"><i class="fas fa-user me-2"></i>My Profile</a></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Addresses"><i class="fas fa-map-marker-alt me-2"></i>My Addresses</a></li>
                <li><a class="dropdown-item" href="@Url.Action("Orders", "Account")"><i class="fas fa-shopping-bag me-2"></i>My Orders</a></li>
                <li><a class="dropdown-item" asp-controller="Account" asp-action="Wishlist"><i class="fas fa-heart me-2"></i>My Wishlist</a></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Page("/", new { area = "" })" method="post">
                        <button type="submit" class="dropdown-item"><i class="fas fa-sign-out-alt me-2"></i>Logout</button>
                    </form>
                </li>
            </ul>
        </li>
        <!-- Customer Cart -->
        <li class="nav-item">
            <a class="nav-link text-dark position-relative" asp-controller="Cart" asp-action="Index">
                <i class="fas fa-shopping-cart"></i> Cart
                <span class="badge bg-primary position-absolute top-0 start-100 translate-middle" id="cart-count">0</span>
            </a>
        </li>
    }
}
else
{
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Register">Register</a>
    </li>
    <li class="nav-item">
        <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
    </li>
}
</ul>