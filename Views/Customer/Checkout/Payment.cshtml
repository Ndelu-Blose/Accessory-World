@using AccessoryWorld.ViewModels
@model PaymentViewModel
@{
    ViewData["Title"] = "Payment";
}

<div class="container mt-4">
    <div class="row">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">
                        <i class="fas fa-credit-card"></i> Payment
                    </h4>
                </div>
                <div class="card-body">
                    <div class="alert alert-info mb-4">
                        <h6><i class="fas fa-info-circle"></i> Order Confirmation</h6>
                        <p class="mb-1"><strong>Order Number:</strong> @Model.Order.OrderNumber</p>
                        <p class="mb-0"><strong>Total Amount:</strong> R @Model.Order.Total.ToString("N2")</p>
                    </div>

                    <!-- Payment Methods -->
                    <form asp-action="ProcessPayment" method="post" id="paymentMethodForm">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="orderId" value="@Model.Order.Id" />
                        <input type="hidden" name="paymentMethod" id="selectedPaymentMethod" />
                        
                        <div class="mb-4">
                            <h5>Select Payment Method</h5>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <div class="card payment-method-card" data-method="payfast" style="cursor: pointer;">
                                        <div class="card-body text-center">
                                            <i class="fas fa-credit-card fa-2x text-primary mb-2"></i>
                                            <h6>Credit/Debit Card</h6>
                                            <small class="text-muted">Secure payment via Payfast</small>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6 mb-3">
                                    <div class="card payment-method-card" data-method="eft" style="cursor: pointer;">
                                        <div class="card-body text-center">
                                            <i class="fas fa-university fa-2x text-success mb-2"></i>
                                            <h6>EFT/Bank Transfer</h6>
                                            <small class="text-muted">Direct bank transfer</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </form>

                    <!-- Card Payment Form -->
                    <div id="cardPaymentForm" class="payment-form" style="display: none;">
                        <h6 class="mb-3">Card Details</h6>
                        <form id="paymentForm">
                            <div class="mb-3">
                                <label for="cardNumber" class="form-label">Card Number</label>
                                <input type="text" class="form-control" id="cardNumber" placeholder="1234 5678 9012 3456" maxlength="19">
                            </div>
                            <div class="row">
                                <div class="col-md-6 mb-3">
                                    <label for="expiryDate" class="form-label">Expiry Date</label>
                                    <input type="text" class="form-control" id="expiryDate" placeholder="MM/YY" maxlength="5">
                                </div>
                                <div class="col-md-6 mb-3">
                                    <label for="cvv" class="form-label">CVV</label>
                                    <input type="text" class="form-control" id="cvv" placeholder="123" maxlength="4">
                                </div>
                            </div>
                            <div class="mb-3">
                                <label for="cardholderName" class="form-label">Cardholder Name</label>
                                <input type="text" class="form-control" id="cardholderName" placeholder="John Doe">
                            </div>
                            
                            <div class="d-grid">
                                <button type="button" class="btn btn-primary btn-lg" id="payNowBtn">
                                    <i class="fas fa-lock"></i> Pay R @Model.Order.Total.ToString("N2")
                                </button>
                            </div>
                        </form>
                    </div>

                    <!-- EFT Payment Instructions -->
                    <div id="eftPaymentForm" class="payment-form" style="display: none;">
                        <h6 class="mb-3">Bank Transfer Details</h6>
                        <div class="alert alert-warning">
                            <h6><i class="fas fa-exclamation-triangle"></i> Important</h6>
                            <p>Please use your order number <strong>@Model.Order.OrderNumber</strong> as the payment reference.</p>
                        </div>
                        
                        <div class="card">
                            <div class="card-body">
                                <h6>AccessoryWorld Banking Details</h6>
                                <table class="table table-borderless mb-0">
                                    <tr>
                                        <td><strong>Bank:</strong></td>
                                        <td>First National Bank</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Account Name:</strong></td>
                                        <td>AccessoryWorld (Pty) Ltd</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Account Number:</strong></td>
                                        <td>1234567890</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Branch Code:</strong></td>
                                        <td>250655</td>
                                    </tr>
                                    <tr>
                                        <td><strong>Reference:</strong></td>
                                        <td><strong>@Model.Order.OrderNumber</strong></td>
                                    </tr>
                                    <tr>
                                        <td><strong>Amount:</strong></td>
                                        <td><strong>R @Model.Order.Total.ToString("N2")</strong></td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                        
                        <div class="alert alert-info mt-3">
                            <p class="mb-0">
                                <i class="fas fa-info-circle"></i>
                                Your order will be processed once payment is received and verified. 
                                This usually takes 1-2 business days.
                            </p>
                        </div>
                        
                        <div class="d-grid">
                            <button type="button" class="btn btn-success btn-lg" id="confirmEftBtn">
                                <i class="fas fa-check"></i> I have made the payment
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Order Summary -->
        <div class="col-lg-4">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Order Summary</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Order #@Model.Order.OrderNumber</strong><br>
                        <small class="text-muted">@Model.Order.CreatedAt.ToString("dd MMM yyyy, HH:mm")</small>
                    </div>
                    
                    <!-- Order Items -->
                    @foreach (var item in Model.Order.OrderItems)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div class="flex-grow-1">
                                <h6 class="mb-1">@item.SKU.Product.Name</h6>
                                <small class="text-muted">@item.SKU.Variant</small><br>
                                <small class="text-muted">Qty: @item.Quantity</small>
                            </div>
                            <div class="text-end">
                                <strong>R @item.LineTotal.ToString("N2")</strong>
                            </div>
                        </div>
                    }
                    
                    <hr>
                    
                    <!-- Delivery Information -->
                    <div class="mb-3">
                        <h6>Delivery Method</h6>
                        @if (Model.Order.FulfilmentMethod == "DELIVERY")
                        {
                            <p class="mb-1"><i class="fas fa-truck"></i> Delivery</p>
                            <small class="text-muted">
                                @Model.Order.ShippingAddress.AddressLine1<br>
                                @if (!string.IsNullOrEmpty(Model.Order.ShippingAddress.AddressLine2))
                                {
                                    @Model.Order.ShippingAddress.AddressLine2<br>
                                }
                                @Model.Order.ShippingAddress.City, @Model.Order.ShippingAddress.Province @Model.Order.ShippingAddress.PostalCode
                            </small>
                        }
                        else
                        {
                            <p class="mb-1"><i class="fas fa-store"></i> Store Pickup</p>
                            <small class="text-muted">123 Main Street, Johannesburg, Gauteng 2000</small>
                        }
                    </div>
                    
                    <hr>
                    
                    <!-- Order Totals -->
                    <div class="d-flex justify-content-between mb-2">
                        <span>Subtotal:</span>
                        <span>R @Model.Order.SubTotal.ToString("N2")</span>
                    </div>
                    
                    <div class="d-flex justify-content-between mb-2">
                        <span>VAT (15%):</span>
                        <span>R @Model.Order.TaxAmount.ToString("N2")</span>
                    </div>
                    
                    @if (Model.Order.ShippingFee > 0)
                    {
                        <div class="d-flex justify-content-between mb-2">
                            <span>Shipping:</span>
                            <span>R @Model.Order.ShippingFee.ToString("N2")</span>
                        </div>
                    }
                    
                    <hr>
                    
                    <div class="d-flex justify-content-between">
                        <strong>Total:</strong>
                        <strong>R @Model.Order.Total.ToString("N2")</strong>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            // Payment method selection
            $('.payment-method-card').click(function() {
                $('.payment-method-card').removeClass('border-primary');
                $(this).addClass('border-primary');
                
                var method = $(this).data('method');
                $('.payment-form').hide();
                $('#' + method + 'PaymentForm').show();
            });

            // Card number formatting
            $('#cardNumber').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                var formattedValue = value.replace(/(\d{4})(?=\d)/g, '$1 ');
                $(this).val(formattedValue);
            });

            // Expiry date formatting
            $('#expiryDate').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                if (value.length >= 2) {
                    value = value.substring(0, 2) + '/' + value.substring(2, 4);
                }
                $(this).val(value);
            });

            // CVV formatting
            $('#cvv').on('input', function() {
                var value = $(this).val().replace(/\D/g, '');
                $(this).val(value);
            });

            // Payment method selection
            $('.payment-method-card').click(function() {
                // Remove selection from all cards
                $('.payment-method-card').removeClass('border-primary');
                
                // Add selection to clicked card
                $(this).addClass('border-primary');
                
                var method = $(this).data('method');
                $('#selectedPaymentMethod').val(method);
                
                // Hide all payment forms
                $('.payment-form').hide();
                
                // Show relevant payment form
                if (method === 'payfast') {
                    // For Payfast, we'll submit directly to process payment
                    showPayfastConfirmation();
                } else if (method === 'eft') {
                    $('#eftPaymentForm').show();
                }
            });
            
            function showPayfastConfirmation() {
                if (confirm('You will be redirected to Payfast to complete your payment. Continue?')) {
                    $('#paymentMethodForm').submit();
                }
            }

            // Confirm EFT button
            $('#confirmEftBtn').click(function() {
                if (confirm('Have you completed the bank transfer with the correct reference number?')) {
                    $('#paymentMethodForm').submit();
                }
            });
        });
    </script>
}

<style>
    .payment-method-card {
        cursor: pointer;
        transition: all 0.2s;
        border: 2px solid transparent;
    }
    
    .payment-method-card:hover {
        box-shadow: 0 4px 8px rgba(0,0,0,0.1);
    }
    
    .payment-method-card.border-primary {
        border-color: #0d6efd !important;
    }
    
    .payment-form {
        border: 1px solid #dee2e6;
        border-radius: 0.375rem;
        padding: 1.5rem;
        background-color: #f8f9fa;
    }
</style>