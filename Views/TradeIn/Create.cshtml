@model AccessoryWorld.Models.ViewModels.CreateTradeInRequest
@{
    ViewData["Title"] = "Submit Trade-In Request";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card">
                <div class="card-header">
                    <h3 class="mb-0"><i class="fas fa-exchange-alt me-2"></i>Submit Trade-In Request</h3>
                    <p class="text-muted mb-0">Get a quote for your device and trade it in for store credit</p>
                </div>
                <div class="card-body">
                    <form asp-controller="TradeIn" asp-action="Create" method="post" enctype="multipart/form-data" novalidate>
                        @Html.AntiForgeryToken()
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="FullName" class="form-label">Full Name *</label>
                                <input asp-for="FullName" class="form-control" required />
                                <span asp-validation-for="FullName" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="Email" class="form-label">Email *</label>
                                <input asp-for="Email" type="email" class="form-control" required />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Phone" class="form-label">Phone Number *</label>
                            <input asp-for="Phone" class="form-control" required />
                            <span asp-validation-for="Phone" class="text-danger"></span>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DeviceBrand" class="form-label">Device Brand *</label>
                                <select asp-for="DeviceBrand" class="form-select" required>
                                    <option value="">Select Brand</option>
                                    <option value="Apple">Apple</option>
                                    <option value="Samsung">Samsung</option>
                                    <option value="Google">Google</option>
                                    <option value="OnePlus">OnePlus</option>
                                    <option value="Huawei">Huawei</option>
                                    <option value="Xiaomi">Xiaomi</option>
                                    <option value="Sony">Sony</option>
                                    <option value="LG">LG</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="DeviceBrand" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="DeviceModel" class="form-label">Device Model *</label>
                                <input asp-for="DeviceModel" class="form-control" placeholder="e.g., iPhone 13 Pro, Galaxy S22" required />
                                <span asp-validation-for="DeviceModel" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label asp-for="DeviceType" class="form-label">Device Type *</label>
                                <select asp-for="DeviceType" class="form-select" required>
                                    <option value="">Select Type</option>
                                    <option value="Smartphone">Smartphone</option>
                                    <option value="Tablet">Tablet</option>
                                    <option value="Laptop">Laptop</option>
                                    <option value="Smartwatch">Smartwatch</option>
                                    <option value="Headphones">Headphones</option>
                                    <option value="Gaming Console">Gaming Console</option>
                                    <option value="Other">Other</option>
                                </select>
                                <span asp-validation-for="DeviceType" class="text-danger"></span>
                            </div>
                            
                            <div class="col-md-6 mb-3">
                                <label asp-for="ConditionGrade" class="form-label">Condition Grade *</label>
                                <select asp-for="ConditionGrade" class="form-select" required>
                                    <option value="">Select Condition</option>
                                    <option value="A">Grade A - Excellent (Like new, no visible wear)</option>
                                    <option value="B">Grade B - Good (Minor wear, fully functional)</option>
                                    <option value="C">Grade C - Fair (Noticeable wear, fully functional)</option>
                                    <option value="D">Grade D - Poor (Heavy wear, may have issues)</option>
                                </select>
                                <span asp-validation-for="ConditionGrade" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Description" class="form-label">Device Description</label>
                            <textarea asp-for="Description" class="form-control" rows="4" 
                                      placeholder="Please describe your device's condition, any accessories included, and any issues or damage..."></textarea>
                            <span asp-validation-for="Description" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="ProposedValue" class="form-label">Expected Value (Optional)</label>
                            <div class="input-group">
                                <span class="input-group-text">R</span>
                                <input asp-for="ProposedValue" type="number" step="0.01" min="0" class="form-control" 
                                       placeholder="0.00" />
                            </div>
                            <div class="form-text">What do you think your device is worth? (This is optional and for reference only)</div>
                            <span asp-validation-for="ProposedValue" class="text-danger"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Photos" class="form-label">Device Photos (Optional)</label>
                            <input asp-for="Photos" type="file" class="form-control" accept="image/*" multiple />
                            <span asp-validation-for="Photos" class="text-danger"></span>
                            <div class="form-text">Upload photos of your device to help us provide a more accurate quote</div>
                        </div>

                        <div class="alert alert-info">
                            <h6><i class="fas fa-info-circle me-1"></i>What happens next?</h6>
                            <ol class="mb-0">
                                <li>We'll review your submission within 1-2 business days</li>
                                <li>Our team will evaluate your device and send you an offer</li>
                                <li>You can accept or decline the offer</li>
                                <li>If accepted, you'll receive store credit to use on your next purchase</li>
                            </ol>
                        </div>

                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-secondary">
                                <i class="fas fa-arrow-left me-1"></i>Back to My Trade-Ins
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fas fa-paper-plane me-1"></i>Submit Trade-In Request
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}