@model AccessoryWorld.ViewModels.ProductBrandsViewModel
@{
    ViewData["Title"] = "Product Brands";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h4 class="mb-0">Product Brands</h4>
                    <div>
                        <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#addBrandModal">
                            <i class="fas fa-plus"></i> Add Brand
                        </button>
                        <button type="button" class="btn btn-info" onclick="exportBrands()">
                            <i class="fas fa-download"></i> Export
                        </button>
                    </div>
                </div>
                <div class="card-body">
                    <!-- Brand Statistics -->
                    <div class="row mb-4">
                        <div class="col-md-3">
                            <div class="card bg-primary text-white">
                                <div class="card-body text-center">
                                    <h3 class="mb-0" id="totalBrands">@Model.TotalBrands</h3>
                                    <small>Total Brands</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-success text-white">
                                <div class="card-body text-center">
                                    <h3 class="mb-0" id="activeBrands">@Model.ActiveBrands</h3>
                                    <small>Active Brands</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-info text-white">
                                <div class="card-body text-center">
                                    <h3 class="mb-0" id="featuredBrands">@Model.FeaturedBrands</h3>
                                    <small>Featured Brands</small>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="card bg-warning text-white">
                                <div class="card-body text-center">
                                    <h3 class="mb-0" id="emptyBrands">@Model.EmptyBrands</h3>
                                    <small>Empty Brands</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Search and Filter -->
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="input-group">
                                <input type="text" id="searchBrands" class="form-control" placeholder="Search brands...">
                                <button class="btn btn-outline-secondary" type="button" onclick="searchBrands()">
                                    <i class="fas fa-search"></i>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <select id="statusFilter" class="form-select">
                                <option value="">All Status</option>
                                <option value="active">Active</option>
                                <option value="inactive">Inactive</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select id="featuredFilter" class="form-select">
                                <option value="">All Brands</option>
                                <option value="featured">Featured Only</option>
                                <option value="regular">Regular Only</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <select id="sortBy" class="form-select">
                                <option value="name">Sort by Name</option>
                                <option value="products">Sort by Products</option>
                                <option value="created">Sort by Created</option>
                                <option value="order">Sort by Order</option>
                            </select>
                        </div>
                        <div class="col-md-2">
                            <button type="button" class="btn btn-primary" onclick="applyFilters()">
                                <i class="fas fa-filter"></i> Filter
                            </button>
                        </div>
                    </div>

                    <!-- Brands Table -->
                    <div class="table-responsive">
                        <table class="table table-striped" id="brandsTable">
                            <thead>
                                <tr>
                                    <th width="5%">
                                        <input type="checkbox" id="selectAll" onchange="toggleSelectAll()">
                                    </th>
                                    <th width="5%">Order</th>
                                    <th width="10%">Logo</th>
                                    <th width="20%">Brand Name</th>
                                    <th width="15%">Website</th>
                                    <th width="10%">Products</th>
                                    <th width="10%">Status</th>
                                    <th width="10%">Featured</th>
                                    <th width="10%">Created</th>
                                    <th width="15%">Actions</th>
                                </tr>
                            </thead>
                            <tbody id="brandsTableBody">
                                <!-- Brands will be loaded here -->
                            </tbody>
                        </table>
                    </div>

                    <!-- Bulk Actions -->
                    <div class="row mt-3" id="bulkActions" style="display: none;">
                        <div class="col-12">
                            <div class="alert alert-info">
                                <span id="selectedCount">0</span> brands selected
                                <div class="float-end">
                                    <button type="button" class="btn btn-sm btn-success" onclick="bulkActivate()">
                                        <i class="fas fa-check"></i> Activate
                                    </button>
                                    <button type="button" class="btn btn-sm btn-warning" onclick="bulkDeactivate()">
                                        <i class="fas fa-times"></i> Deactivate
                                    </button>
                                    <button type="button" class="btn btn-sm btn-info" onclick="bulkFeature()">
                                        <i class="fas fa-star"></i> Feature
                                    </button>
                                    <button type="button" class="btn btn-sm btn-danger" onclick="bulkDelete()">
                                        <i class="fas fa-trash"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Pagination -->
                    <nav aria-label="Brands pagination">
                        <ul class="pagination justify-content-center" id="brandsPagination">
                            <!-- Pagination will be generated here -->
                        </ul>
                    </nav>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Add Brand Modal -->
<div class="modal fade" id="addBrandModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Add New Brand</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <form id="addBrandForm">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="brandName" class="form-label">Brand Name *</label>
                                <input type="text" id="brandName" class="form-control" placeholder="Enter brand name" required>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="brandSlug" class="form-label">URL Slug</label>
                                <input type="text" id="brandSlug" class="form-control" placeholder="auto-generated" readonly>
                                <small class="text-muted">Auto-generated from brand name</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="brandWebsite" class="form-label">Website URL</label>
                                <input type="url" id="brandWebsite" class="form-control" placeholder="https://example.com">
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group mb-3">
                                <label for="brandOrder" class="form-label">Display Order</label>
                                <input type="number" id="brandOrder" class="form-control" value="0" min="0">
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group mb-3">
                        <label for="brandDescription" class="form-label">Description</label>
                        <textarea id="brandDescription" class="form-control" rows="3" placeholder="Enter brand description"></textarea>
                    </div>
                    
                    <!-- Logo Upload -->
                    <div class="form-group mb-3">
                        <label for="brandLogo" class="form-label">Brand Logo</label>
                        <div class="logo-upload-area" id="logoUploadArea">
                            <div class="upload-placeholder" id="uploadPlaceholder">
                                <i class="fas fa-cloud-upload-alt fa-3x text-muted mb-3"></i>
                                <p class="text-muted">Drag & drop logo here or click to browse</p>
                                <p class="text-muted small">Recommended: 200x100px, Max: 2MB</p>
                                <input type="file" id="brandLogo" class="d-none" accept="image/*">
                            </div>
                            <div class="logo-preview" id="logoPreview" style="display: none;">
                                <img id="previewImage" src="" alt="Logo Preview" class="img-thumbnail">
                                <button type="button" class="btn btn-sm btn-danger mt-2" onclick="removeLogo()">
                                    <i class="fas fa-trash"></i> Remove
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-check mb-3">
                                <input type="checkbox" id="brandActive" class="form-check-input" checked>
                                <label for="brandActive" class="form-check-label">Active</label>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-check mb-3">
                                <input type="checkbox" id="brandFeatured" class="form-check-input">
                                <label for="brandFeatured" class="form-check-label">Featured Brand</label>
                            </div>
                        </div>
                    </div>
                    
                    <!-- SEO Settings -->
                    <div class="card mt-3">
                        <div class="card-header">
                            <h6 class="mb-0">SEO Settings</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-group mb-3">
                                <label for="metaTitle" class="form-label">Meta Title</label>
                                <input type="text" id="metaTitle" class="form-control" placeholder="SEO title">
                                <small class="text-muted">Recommended: 50-60 characters</small>
                            </div>
                            <div class="form-group mb-3">
                                <label for="metaDescription" class="form-label">Meta Description</label>
                                <textarea id="metaDescription" class="form-control" rows="2" placeholder="SEO description"></textarea>
                                <small class="text-muted">Recommended: 150-160 characters</small>
                            </div>
                            <div class="form-group mb-3">
                                <label for="metaKeywords" class="form-label">Meta Keywords</label>
                                <input type="text" id="metaKeywords" class="form-control" placeholder="keyword1, keyword2, keyword3">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="saveBrand()">
                    <i class="fas fa-save"></i> Save Brand
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Edit Brand Modal -->
<div class="modal fade" id="editBrandModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Edit Brand</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body" id="editBrandContent">
                <!-- Edit form will be loaded here -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-primary" onclick="updateBrand()">
                    <i class="fas fa-save"></i> Update Brand
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteBrandModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this brand?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-exclamation-triangle"></i>
                    <strong>Warning:</strong> This action will affect all products associated with this brand.
                </div>
                <div id="deleteOptions">
                    <div class="form-check">
                        <input type="radio" id="unassignProducts" name="deleteAction" value="unassign" class="form-check-input" checked>
                        <label for="unassignProducts" class="form-check-label">Unassign brand from products</label>
                    </div>
                    <div class="form-check">
                        <input type="radio" id="deleteProducts" name="deleteAction" value="delete" class="form-check-input">
                        <label for="deleteProducts" class="form-check-label">Delete all products with this brand</label>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="confirmDeleteBrand()">
                    <i class="fas fa-trash"></i> Delete Brand
                </button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        let selectedBrands = [];
        let currentPage = 1;
        let pageSize = 10;

        $(document).ready(function() {
            loadBrands();
            setupEventHandlers();
        });

        function setupEventHandlers() {
            $('#brandName').on('input', function() {
                const slug = generateSlug($(this).val());
                $('#brandSlug').val(slug);
            });

            $('#searchBrands').on('keypress', function(e) {
                if (e.which === 13) {
                    searchBrands();
                }
            });

            // Logo upload handlers
            $('#logoUploadArea').on('click', function() {
                $('#brandLogo').click();
            });

            $('#brandLogo').on('change', function() {
                handleLogoUpload(this.files[0]);
            });

            // Drag and drop handlers
            $('#logoUploadArea').on('dragover', function(e) {
                e.preventDefault();
                $(this).addClass('drag-over');
            });

            $('#logoUploadArea').on('dragleave', function(e) {
                e.preventDefault();
                $(this).removeClass('drag-over');
            });

            $('#logoUploadArea').on('drop', function(e) {
                e.preventDefault();
                $(this).removeClass('drag-over');
                const files = e.originalEvent.dataTransfer.files;
                if (files.length > 0) {
                    handleLogoUpload(files[0]);
                }
            });
        }

        function generateSlug(text) {
            return text.toLowerCase()
                .replace(/[^\w\s-]/g, '')
                .replace(/[\s_-]+/g, '-')
                .replace(/^-+|-+$/g, '');
        }

        function handleLogoUpload(file) {
            if (!file) return;
            
            // Validate file type
            if (!file.type.startsWith('image/')) {
                toastr.error('Please select a valid image file');
                return;
            }
            
            // Validate file size (2MB)
            if (file.size > 2 * 1024 * 1024) {
                toastr.error('File size must be less than 2MB');
                return;
            }
            
            // Show preview
            const reader = new FileReader();
            reader.onload = function(e) {
                $('#previewImage').attr('src', e.target.result);
                $('#uploadPlaceholder').hide();
                $('#logoPreview').show();
            };
            reader.readAsDataURL(file);
        }

        function removeLogo() {
            $('#brandLogo').val('');
            $('#logoPreview').hide();
            $('#uploadPlaceholder').show();
        }

        function loadBrands(page = 1) {
            currentPage = page;
            const filters = {
                search: $('#searchBrands').val(),
                status: $('#statusFilter').val(),
                featured: $('#featuredFilter').val(),
                sortBy: $('#sortBy').val(),
                page: page,
                pageSize: pageSize
            };

            $.ajax({
                url: '/Admin/GetBrands',
                type: 'GET',
                data: filters,
                success: function(response) {
                    if (response.success) {
                        displayBrands(response.data.brands);
                        updatePagination(response.data.totalPages, response.data.currentPage);
                        updateStatistics(response.data.statistics);
                    } else {
                        toastr.error('Failed to load brands');
                    }
                },
                error: function() {
                    toastr.error('An error occurred while loading brands');
                }
            });
        }

        function displayBrands(brands) {
            const tbody = $('#brandsTableBody');
            tbody.empty();

            if (brands.length === 0) {
                tbody.append(`
                    <tr>
                        <td colspan="10" class="text-center text-muted py-4">
                            <i class="fas fa-tags fa-2x mb-2"></i><br>
                            No brands found
                        </td>
                    </tr>
                `);
                return;
            }

            brands.forEach(function(brand) {
                const statusBadge = brand.isActive 
                    ? '<span class="badge bg-success">Active</span>' 
                    : '<span class="badge bg-secondary">Inactive</span>';
                
                const featuredBadge = brand.isFeatured 
                    ? '<span class="badge bg-warning">Featured</span>' 
                    : '<span class="badge bg-light text-dark">Regular</span>';
                
                const logoImg = brand.logoUrl 
                    ? `<img src="${brand.logoUrl}" alt="${brand.name}" class="brand-logo">` 
                    : '<i class="fas fa-image text-muted"></i>';
                
                const websiteLink = brand.website 
                    ? `<a href="${brand.website}" target="_blank" class="text-decoration-none">${brand.website}</a>` 
                    : '-';
                
                const productCount = brand.productCount || 0;
                
                const row = `
                    <tr>
                        <td>
                            <input type="checkbox" class="brand-checkbox" value="${brand.id}" onchange="updateSelection()">
                        </td>
                        <td>
                            <input type="number" class="form-control form-control-sm" value="${brand.displayOrder}" 
                                   onchange="updateBrandOrder(${brand.id}, this.value)" style="width: 70px;">
                        </td>
                        <td class="text-center">
                            ${logoImg}
                        </td>
                        <td>
                            <div>
                                <strong>${brand.name}</strong>
                                <br><small class="text-muted">${brand.slug}</small>
                            </div>
                        </td>
                        <td>${websiteLink}</td>
                        <td class="text-center">
                            <span class="badge bg-info">${productCount}</span>
                        </td>
                        <td>${statusBadge}</td>
                        <td>${featuredBadge}</td>
                        <td>${formatDate(brand.createdAt)}</td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <button type="button" class="btn btn-outline-info" onclick="viewBrand(${brand.id})" title="View">
                                    <i class="fas fa-eye"></i>
                                </button>
                                <button type="button" class="btn btn-outline-primary" onclick="editBrand(${brand.id})" title="Edit">
                                    <i class="fas fa-edit"></i>
                                </button>
                                <button type="button" class="btn btn-outline-danger" onclick="deleteBrand(${brand.id})" title="Delete">
                                    <i class="fas fa-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function saveBrand() {
            const formData = new FormData();
            
            // Add form fields
            formData.append('name', $('#brandName').val());
            formData.append('slug', $('#brandSlug').val());
            formData.append('website', $('#brandWebsite').val());
            formData.append('description', $('#brandDescription').val());
            formData.append('displayOrder', $('#brandOrder').val());
            formData.append('isActive', $('#brandActive').is(':checked'));
            formData.append('isFeatured', $('#brandFeatured').is(':checked'));
            formData.append('metaTitle', $('#metaTitle').val());
            formData.append('metaDescription', $('#metaDescription').val());
            formData.append('metaKeywords', $('#metaKeywords').val());
            
            // Add logo file
            const logoFile = $('#brandLogo')[0].files[0];
            if (logoFile) {
                formData.append('logo', logoFile);
            }

            $.ajax({
                url: '/Admin/CreateBrand',
                type: 'POST',
                data: formData,
                processData: false,
                contentType: false,
                success: function(response) {
                    if (response.success) {
                        toastr.success('Brand created successfully!');
                        $('#addBrandModal').modal('hide');
                        loadBrands();
                        resetAddForm();
                    } else {
                        toastr.error(response.message || 'Failed to create brand');
                    }
                },
                error: function() {
                    toastr.error('An error occurred while creating the brand');
                }
            });
        }

        function editBrand(brandId) {
            $.ajax({
                url: `/Admin/GetBrand/${brandId}`,
                type: 'GET',
                success: function(response) {
                    if (response.success) {
                        populateEditForm(response.data);
                        $('#editBrandModal').modal('show');
                    } else {
                        toastr.error('Failed to load brand details');
                    }
                },
                error: function() {
                    toastr.error('An error occurred while loading brand details');
                }
            });
        }

        function populateEditForm(brand) {
            // This would populate the edit form with brand data
            // Implementation would be similar to the add form but with existing values
        }

        function updateBrand() {
            // Implementation for updating brand
        }

        function deleteBrand(brandId) {
            // Store brand ID for deletion
            $('#deleteBrandModal').data('brandId', brandId);
            $('#deleteBrandModal').modal('show');
        }

        function confirmDeleteBrand() {
            const brandId = $('#deleteBrandModal').data('brandId');
            const action = $('input[name="deleteAction"]:checked').val();
            
            $.ajax({
                url: `/Admin/DeleteBrand/${brandId}`,
                type: 'DELETE',
                data: { action: action },
                success: function(response) {
                    if (response.success) {
                        toastr.success('Brand deleted successfully!');
                        $('#deleteBrandModal').modal('hide');
                        loadBrands();
                    } else {
                        toastr.error(response.message || 'Failed to delete brand');
                    }
                },
                error: function() {
                    toastr.error('An error occurred while deleting the brand');
                }
            });
        }

        function updateBrandOrder(brandId, newOrder) {
            $.ajax({
                url: '/Admin/UpdateBrandOrder',
                type: 'POST',
                data: { brandId: brandId, displayOrder: newOrder },
                success: function(response) {
                    if (response.success) {
                        toastr.success('Brand order updated!');
                    } else {
                        toastr.error('Failed to update brand order');
                    }
                }
            });
        }

        function updateSelection() {
            selectedBrands = $('.brand-checkbox:checked').map(function() {
                return parseInt($(this).val());
            }).get();
            
            $('#selectedCount').text(selectedBrands.length);
            
            if (selectedBrands.length > 0) {
                $('#bulkActions').show();
            } else {
                $('#bulkActions').hide();
            }
        }

        function toggleSelectAll() {
            const isChecked = $('#selectAll').is(':checked');
            $('.brand-checkbox').prop('checked', isChecked);
            updateSelection();
        }

        function bulkActivate() {
            bulkAction('activate');
        }

        function bulkDeactivate() {
            bulkAction('deactivate');
        }

        function bulkFeature() {
            bulkAction('feature');
        }

        function bulkDelete() {
            if (confirm('Are you sure you want to delete the selected brands?')) {
                bulkAction('delete');
            }
        }

        function bulkAction(action) {
            $.ajax({
                url: '/Admin/BulkBrandAction',
                type: 'POST',
                data: { brandIds: selectedBrands, action: action },
                success: function(response) {
                    if (response.success) {
                        toastr.success(`Brands ${action}d successfully!`);
                        loadBrands();
                        selectedBrands = [];
                        $('#bulkActions').hide();
                        $('#selectAll').prop('checked', false);
                    } else {
                        toastr.error(response.message || `Failed to ${action} brands`);
                    }
                },
                error: function() {
                    toastr.error(`An error occurred while ${action}ing brands`);
                }
            });
        }

        function searchBrands() {
            loadBrands(1);
        }

        function applyFilters() {
            loadBrands(1);
        }

        function exportBrands() {
            window.open('/Admin/ExportBrands', '_blank');
        }

        function resetAddForm() {
            $('#addBrandForm')[0].reset();
            $('#brandActive').prop('checked', true);
            removeLogo();
        }

        function updateStatistics(stats) {
            $('#totalBrands').text(stats.total);
            $('#activeBrands').text(stats.active);
            $('#featuredBrands').text(stats.featured);
            $('#emptyBrands').text(stats.empty);
        }

        function updatePagination(totalPages, currentPage) {
            // Implementation similar to other pagination functions
        }

        function formatDate(dateString) {
            const date = new Date(dateString);
            return date.toLocaleDateString();
        }

        function viewBrand(brandId) {
            window.open(`/Admin/BrandDetails/${brandId}`, '_blank');
        }
    </script>
}

<style>
    .logo-upload-area {
        border: 2px dashed #ddd;
        border-radius: 8px;
        padding: 20px;
        text-align: center;
        cursor: pointer;
        transition: all 0.3s ease;
    }
    
