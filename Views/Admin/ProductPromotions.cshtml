                success: function(response) {
                    if (response.success) {
                        toastr.success('Promotion duplicated successfully!');
                        loadPromotions();
                    } else {
                        toastr.error(response.message || 'Failed to duplicate promotion');
                    }
                },
                error: function() {
                    toastr.error('An error occurred while duplicating the promotion');
                }
