    <script>
        function viewProduct(productId) {
            // Debug: Log the URL being generated
            var url = '/Admin/ProductDetails/' + productId;
            console.log('Navigating to:', url);
            // Redirect to admin product details page
            window.location.href = url;
        }
        
        function editProduct(productId) {
            // Redirect to product edit page
            window.location.href = '/Admin/EditProduct/' + productId;
        }
        
        function manageInventory(productId) {
            // Redirect to inventory management page
            window.location.href = '/Admin/Inventory?productId=' + productId;
        }
        
        function toggleProductStatus(productId, activate) {
            const action = activate ? 'activate' : 'deactivate';
            if (confirm(`Are you sure you want to ${action} this product?`)) {
                // Get the antiforgery token
                const token = $('input[name="__RequestVerificationToken"]').val();
                
                // Implement AJAX call to toggle product status
                fetch(`/Admin/ToggleProductStatus`, {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'X-Requested-With': 'XMLHttpRequest',
                        'RequestVerificationToken': token
                    },
                    body: JSON.stringify({ productId: productId, isActive: activate })
                })
                .then(response => {
                    if (!response.ok) {
                        throw new Error('Network response was not ok');
                    }
                    return response.json();
                })
                .then(data => {
                    if (data.success) {
                        location.reload();
                    } else {
                        alert('Error updating product status: ' + data.message);
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error updating product status');
                });
            }
        }
        
        function exportProducts() {
            // Export products to CSV
            window.location.href = '/Admin/ExportProducts';
        }
    </script>
}