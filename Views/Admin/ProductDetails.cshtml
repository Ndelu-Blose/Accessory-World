@model AccessoryWorld.Models.Product
@{
    ViewData["Title"] = $"Admin - {Model.Name}";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var relatedProducts = ViewBag.RelatedProducts as List<AccessoryWorld.Models.Product>;
    var currentPrice = Model.IsOnSale && Model.SalePrice.HasValue ? Model.SalePrice.Value : Model.Price;
    var originalPrice = Model.Price;
    var totalStock = Model.SKUs.Sum(s => s.StockQuantity);
    var totalValue = Model.SKUs.Sum(s => s.StockQuantity * s.Price);
}

<div class="admin-layout">
    <div class="row">
        <!-- Admin Sidebar -->
        <div class="col-md-3">
            <div class="admin-sidebar">
                <div class="admin-sidebar-header">
                    <h5><i class="fas fa-tachometer-alt me-2"></i>Admin Panel</h5>
                </div>
                <nav>
                    <ul class="admin-nav">
                        <li class="admin-nav-item">
                            <a href="@Url.Action("Dashboard", "Admin")" class="admin-nav-link">
                                <i class="fas fa-tachometer-alt"></i>
                                <span>Dashboard</span>
                            </a>
                        </li>
                        <li class="admin-nav-item">
                            <a href="@Url.Action("Products", "Admin")" class="admin-nav-link active">
                                <i class="fas fa-box"></i>
                                <span>Products</span>
                            </a>
                        </li>
                        <li class="admin-nav-item">
                            <a href="@Url.Action("Orders", "Admin")" class="admin-nav-link">
                                <i class="fas fa-shopping-cart"></i>
                                <span>Orders</span>
                            </a>
                        </li>
                        <li class="admin-nav-item">
                            <a href="@Url.Action("Users", "Admin")" class="admin-nav-link">
                                <i class="fas fa-users"></i>
                                <span>Users</span>
                            </a>
                        </li>
                        <li class="admin-nav-item">
                            <a href="@Url.Action("Inventory", "Admin")" class="admin-nav-link">
                                <i class="fas fa-warehouse"></i>
                                <span>Inventory</span>
                            </a>
                        </li>
                        <li class="admin-nav-item">
                            <a href="@Url.Action("Reports", "Admin")" class="admin-nav-link">
                                <i class="fas fa-chart-bar"></i>
                                <span>Reports</span>
                            </a>
                        </li>
                        <li class="admin-nav-item">
                            <a href="@Url.Action("Settings", "Admin")" class="admin-nav-link">
                                <i class="fas fa-cog"></i>
                                <span>Settings</span>
                            </a>
                        </li>
                    </ul>
                </nav>
            </div>
        </div>

        <!-- Main Content -->
        <div class="col-md-9">
            <div class="admin-content">
                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-4">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="@Url.Action("Dashboard", "Admin")">Admin Dashboard</a></li>
                        <li class="breadcrumb-item"><a href="@Url.Action("Products", "Admin")">Products</a></li>
                        <li class="breadcrumb-item active" aria-current="page">@Model.Name</li>
                    </ol>
                </nav>

                <div class="row">
                    <!-- Product Images -->
                    <div class="col-lg-6">
                        @if (Model.ProductImages.Any())
                        {
                            <div id="adminProductCarousel" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-inner">
                                    @{ int imageIndex = 0; }
                                    @foreach (var image in Model.ProductImages)
                                    {
                                        <div class="carousel-item @(imageIndex == 0 ? "active" : "")">
                                            <img src="@image.ImageUrl" 
                                                 class="d-block w-100 rounded" 
                                                 alt="@Model.Name" 
                                                 style="height: 400px; object-fit: cover;">
                                        </div>
                                        imageIndex++;
                                    }
                                </div>
                                @if (Model.ProductImages.Count > 1)
                                {
                                    <button class="carousel-control-prev" type="button" data-bs-target="#adminProductCarousel" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button" data-bs-target="#adminProductCarousel" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                }
                            </div>
                            
                            @if (Model.ProductImages.Count > 1)
                            {
                                <div class="d-flex mt-3 gap-2">
                                    @{ int thumbIndex = 0; }
                                    @foreach (var image in Model.ProductImages)
                                    {
                                        <div class="flex-shrink-0">
                                            <img src="@image.ImageUrl" 
                                                 class="img-thumbnail cursor-pointer thumbnail-img @(thumbIndex == 0 ? "active" : "")" 
                                                 alt="@Model.Name" 
                                                 data-bs-target="#adminProductCarousel" 
                                                 data-bs-slide-to="@thumbIndex"
                                                 style="height: 80px; object-fit: cover;">
                                        </div>
                                        thumbIndex++;
                                    }
                                </div>
                            }
                        }
                        else
                        {
                            <div class="d-flex align-items-center justify-content-center bg-light rounded" style="height: 400px;">
                                <i class="fas fa-image fa-5x text-muted"></i>
                            </div>
                        }
                    </div>

                    <!-- Admin Product Details -->
                    <div class="col-lg-6">
                        <div class="ps-lg-4">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <h1 class="display-6 fw-bold mb-0">@Model.Name</h1>
                                <div class="badge-container">
                                    @if (Model.IsActive)
                                    {
                                        <span class="badge bg-success">Active</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger">Inactive</span>
                                    }
                                    @if (Model.IsFeatured)
                                    {
                                        <span class="badge bg-primary">Featured</span>
                                    }
                                    @if (Model.IsOnSale)
                                    {
                                        <span class="badge bg-warning">On Sale</span>
                                    }
                                </div>
                            </div>
                            
                            <!-- Basic Information -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Basic Information</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Product ID:</strong> @Model.Id</p>
                                            <p><strong>Brand:</strong> @(Model.Brand?.Name ?? "N/A")</p>
                                            <p><strong>Category:</strong> @(Model.Category?.Name ?? "N/A")</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Created:</strong> @Model.CreatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                                            <p><strong>Last Updated:</strong> @Model.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</p>
                                            <p><strong>View Count:</strong> @Model.ViewCount</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Pricing Information -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fas fa-dollar-sign me-2"></i>Pricing</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Base Price:</strong> R@(Model.Price.ToString("N2"))</p>
                                            @if (Model.CompareAtPrice.HasValue)
                                            {
                                                <p><strong>Compare At Price:</strong> R@(Model.CompareAtPrice.Value.ToString("N2"))</p>
                                            }
                                        </div>
                                        <div class="col-md-6">
                                            @if (Model.IsOnSale && Model.SalePrice.HasValue)
                                            {
                                                <p><strong>Sale Price:</strong> R@(Model.SalePrice.Value.ToString("N2"))</p>
                                                <p><strong>Current Price:</strong> <span class="text-success fw-bold">R@(currentPrice.ToString("N2"))</span></p>
                                            }
                                            else
                                            {
                                                <p><strong>Current Price:</strong> <span class="fw-bold">R@(currentPrice.ToString("N2"))</span></p>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Inventory Information -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fas fa-boxes me-2"></i>Inventory</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Total Stock:</strong> 
                                                <span class="@(totalStock <= 5 ? "text-danger" : totalStock <= 20 ? "text-warning" : "text-success") fw-bold">
                                                    @totalStock units
                                                </span>
                                            </p>
                                            <p><strong>SKU Count:</strong> @Model.SKUs.Count</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Total Value:</strong> R@(totalValue.ToString("N2"))</p>
                                            <p><strong>Low Stock Threshold:</strong> @(Model.SKUs.FirstOrDefault()?.LowStockThreshold ?? 5)</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Product Flags -->
                            <div class="card mb-4">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fas fa-flag me-2"></i>Product Flags</h5>
                                </div>
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <p><strong>Featured:</strong> @(Model.IsFeatured ? "Yes" : "No")</p>
                                            <p><strong>Best Seller:</strong> @(Model.IsBestSeller ? "Yes" : "No")</p>
                                            <p><strong>New Product:</strong> @(Model.IsNew ? "Yes" : "No")</p>
                                        </div>
                                        <div class="col-md-6">
                                            <p><strong>Hot Product:</strong> @(Model.IsHot ? "Yes" : "No")</p>
                                            <p><strong>Today's Deal:</strong> @(Model.IsTodayDeal ? "Yes" : "No")</p>
                                            <p><strong>On Sale:</strong> @(Model.IsOnSale ? "Yes" : "No")</p>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- Admin Actions -->
                            <div class="card">
                                <div class="card-header">
                                    <h5 class="mb-0"><i class="fas fa-tools me-2"></i>Admin Actions</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex gap-2 flex-wrap">
                                        <a href="@Url.Action("EditProduct", "Admin", new { id = Model.Id })" class="btn btn-warning">
                                            <i class="fas fa-edit"></i> Edit Product
                                        </a>
                                        <a href="@Url.Action("ManageInventory", "Admin", new { productId = Model.Id })" class="btn btn-info">
                                            <i class="fas fa-boxes"></i> Manage Inventory
                                        </a>
                                        <button class="btn btn-secondary" onclick="window.history.back()">
                                            <i class="fas fa-arrow-left"></i> Back to Products
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Product Description -->
                @if (!string.IsNullOrEmpty(Model.Description))
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-align-left me-2"></i>Description</h5>
                        </div>
                        <div class="card-body">
                            <p>@Model.Description</p>
                        </div>
                    </div>
                }

                <!-- Product Specifications -->
                @if (Model.ProductSpecifications.Any())
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-list me-2"></i>Specifications</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>Specification</th>
                                            <th>Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var spec in Model.ProductSpecifications)
                                        {
                                            <tr>
                                                <td><strong>@spec.SpecificationName</strong></td>
                                                <td>@spec.SpecificationValue</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- SKU Details -->
                @if (Model.SKUs.Any())
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-barcode me-2"></i>SKU Details</h5>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                                <table class="table table-striped">
                                    <thead>
                                        <tr>
                                            <th>SKU Code</th>
                                            <th>Price</th>
                                            <th>Stock</th>
                                            <th>Low Stock Threshold</th>
                                            <th>Status</th>
                                            <th>Created</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var sku in Model.SKUs)
                                        {
                                            <tr>
                                                <td><code>@sku.SKUCode</code></td>
                                                <td>R@(sku.Price.ToString("N2"))</td>
                                                <td>
                                                    <span class="@(sku.StockQuantity <= sku.LowStockThreshold ? "text-danger" : "text-success") fw-bold">
                                                        @sku.StockQuantity
                                                    </span>
                                                </td>
                                                <td>@sku.LowStockThreshold</td>
                                                <td>
                                                    @if (sku.IsActive)
                                                    {
                                                        <span class="badge bg-success">Active</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge bg-danger">Inactive</span>
                                                    }
                                                </td>
                                                <td>@sku.CreatedAt.ToString("yyyy-MM-dd")</td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                }

                <!-- Related Products -->
                @if (relatedProducts != null && relatedProducts.Any())
                {
                    <div class="card mt-4">
                        <div class="card-header">
                            <h5 class="mb-0"><i class="fas fa-link me-2"></i>Related Products</h5>
                        </div>
                        <div class="card-body">
                            <div class="row">
                                @foreach (var relatedProduct in relatedProducts)
                                {
                                    <div class="col-md-3 mb-3">
                                        <div class="card h-100">
                                            @if (relatedProduct.ProductImages.Any())
                                            {
                                                <img src="@relatedProduct.ProductImages.First().ImageUrl" 
                                                     class="card-img-top" 
                                                     alt="@relatedProduct.Name" 
                                                     style="height: 150px; object-fit: cover;">
                                            }
                                            else
                                            {
                                                <div class="card-img-top d-flex align-items-center justify-content-center bg-light" style="height: 150px;">
                                                    <i class="fas fa-image fa-2x text-muted"></i>
                                                </div>
                                            }
                                            <div class="card-body">
                                                <h6 class="card-title">@relatedProduct.Name</h6>
                                                <p class="card-text small text-muted">@relatedProduct.Brand?.Name</p>
                                                <p class="card-text"><strong>R@(relatedProduct.Price.ToString("N2"))</strong></p>
                                                <a href="@Url.Action("ProductDetails", "Admin", new { id = relatedProduct.Id })" class="btn btn-sm btn-outline-primary">
                                                    View Details
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
.admin-layout {
    min-height: 100vh;
    background-color: #f8f9fa;
}

.admin-sidebar {
    background: #343a40;
    color: white;
    min-height: 100vh;
    padding: 0;
}

.admin-sidebar-header {
    padding: 1rem;
    background: #495057;
    border-bottom: 1px solid #6c757d;
}

.admin-nav {
    list-style: none;
    padding: 0;
    margin: 0;
}

.admin-nav-item {
    border-bottom: 1px solid #495057;
}

.admin-nav-link {
    display: flex;
    align-items: center;
    padding: 1rem;
    color: #adb5bd;
    text-decoration: none;
    transition: all 0.3s ease;
}

.admin-nav-link:hover {
    background: #495057;
    color: white;
}

.admin-nav-link.active {
    background: #007bff;
    color: white;
}

.admin-nav-link i {
    margin-right: 0.5rem;
    width: 20px;
}

.admin-content {
    padding: 2rem;
}

.badge-container .badge {
    margin-left: 0.25rem;
}

.thumbnail-img {
    cursor: pointer;
    transition: opacity 0.3s ease;
}

.thumbnail-img:hover {
    opacity: 0.8;
}

.thumbnail-img.active {
    border-color: #007bff;
    border-width: 2px;
}
</style>